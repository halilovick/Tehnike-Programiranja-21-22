#include <cmath>
#include <iostream>

void Goldbach(int n, int &p, int &q) {
  if (n <= 2)
    throw std::logic_error{"Rastava ne postoji"};
  if (n % 2 != 0) {
    int prvibroj = 2;
    int drugibroj = n - prvibroj;
    bool prost2 = true;
    if (drugibroj <= 1) {
      prost2 = false;
    } else if (drugibroj <= 3) {
      prost2 = true;
    } else if (drugibroj % 2 == 0 || drugibroj % 3 == 0) {
      prost2 = false;
    } else {
      for (int j = 5; j <= sqrt(drugibroj); j += 6) {
        if (drugibroj % j == 0 || drugibroj % (j + 2) == 0) {
          prost2 = false;
          break;
        }
      }
    }
    if (prost2) {
      p = prvibroj;
      q = drugibroj;
    } else {
      throw std::logic_error{"Rastava ne postoji"};
    }
    return;
  }
  for (int i = 2; i <= n / 2; ++i) {
    bool prost1 = true;
    int prvibroj = i;
    if (prvibroj <= 1) {
      prost1 = false;
    } else if (prvibroj <= 3) {
      prost1 = true;
    } else if (prvibroj % 2 == 0 || prvibroj % 3 == 0) {
      prost1 = false;
    } else {
      for (int j = 5; j <= sqrt(prvibroj); j += 6) {
        if (prvibroj % j == 0 || prvibroj % (j + 2) == 0) {
          prost1 = false;
          break;
        }
      }
    }
    if (prost1) {
      int drugibroj = n - prvibroj;
      bool prost2 = true;
      if (drugibroj <= 1) {
        prost2 = false;
      } else if (drugibroj <= 3) {
        prost2 = true;
      } else if (drugibroj % 2 == 0 || drugibroj % 3 == 0) {
        prost2 = false;
      } else {
        for (int j = 5; j <= sqrt(drugibroj); j += 6) {
          if (drugibroj % j == 0 || drugibroj % (j + 2) == 0) {
            prost2 = false;
            break;
          }
        }
      }
      if (prost2) {
        p = prvibroj;
        q = drugibroj;
        return;
      }
    }
  }
  throw std::logic_error{"Rastava ne postoji"};
}

int main() {
  int n, p, q;
  std::cout << "Unesi broj: ";
  std::cin >> n;
  std::cout << std::endl;
  try {
    Goldbach(n, p, q);
    std::cout << n << " je zbir prostih brojeva " << p << " i " << q;
  } catch (std::logic_error greska) {
    std::cout << n << " nije zbir dva prosta broja!";
  }
  return 0;
}
